{
  "manifest_version": 3,
  "name": "Unswayed",
  "description": "Hide social metrics to form your own opinions first",
  "version": "2.0",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://x.com/*", "*://twitter.com/*"],
      "css": ["x/hide-metrics.css"],
      "js": ["x/content.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://www.youtube.com/*", "*://youtube.com/*"],
      "css": ["youtube/hide-metrics.css"],
      "js": ["youtube/content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
